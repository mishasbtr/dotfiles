#!/bin/sh

marker="/tmp/waybar-movie"

show() {
    if [ -e "$marker" ]; then
        printf '{"text": "", "class": "on"}\n'
    else
        printf '{"text": "", "class": "off"}\n'
    fi
}

on() {
    touch "$marker"
    systemctl --user stop wluma
    light -S 100
    pkill -RTMIN+4 -x waybar
}

off() {
    systemctl --user start wluma
    rm -f "$marker"
    pkill -RTMIN+4 -x waybar
}

toggle() {
    [ -e "$marker" ] && off || on
}

case "$1" in
    on)     on ;;
    off)    off ;;
    toggle) toggle ;;
    '')     show ;;
esac
