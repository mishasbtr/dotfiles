include ~/.config/i3/colorscheme
include ~/.config/i3/keybindings
include ~/.config/i3/exec

# Font for window titles
font pango: Noto Sans Regular 10
 
# wtf is this?
set $refresh_i3status killall -SIGUSR1 i3status

# use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier Mod1

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# Add borders for all windows
bar {
      status_command i3status
      mode hide
      height 20
      colors {
        background #282828

        statusline #ebdbb2
        separator  #458588

        focused_workspace  #458588 #282828 #ebdbb2
        active_workspace   #3c3836 #504945 #fbf1c7
        inactive_workspace #3c3836 #282828 #928374
        urgent_workspace   #3c3836 #cc241d #fbf1c7
      }
}
for_window [class="^.*"] border pixel 1



